<form class="container my-4" id="url-shortener-form">
    <div class="mb-3">
        <label for="inputUrl" class="form-label">Enter URL to shorten</label>
        <input type="url" class="form-control" id="inputUrl" name="url" placeholder="https://example.com" required>
    </div>
    <button type="submit" class="btn btn-primary">Shorten URL</button>
</form>

<div class="container my-4" id="short-url-pane" style="display: none;">
    <div class="alert alert-success" role="alert">
        Shortened URL: <a href="#" id="shortUrl" target="_blank"></a>
    </div>
</div>